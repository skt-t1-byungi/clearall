{
    "name": "clearall",
    "description": "Clear all event listeners at once.",
    "version": "0.1.0",
    "repository": "https://github.com/skt-t1-byungi/clearall.git",
    "author": "byungi <tiniwz@gmail.com>",
    "keywords": [
        "event",
        "cleanup",
        "clear",
        "destroy",
        "dispose"
    ],
    "main": "index.js",
    "types": "index.d.ts",
    "files": [
        "index.js",
        "index.d.ts"
    ],
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf index.js index.d.ts",
        "test": "npm run clean && ava",
        "build": "tsc",
        "prepublishOnly": "npm run test && npm run build"
    },
    "devDependencies": {
        "@byungi/event-emitter": "^1.1.0",
        "ava": "^2.4.0",
        "eslint": "^6.6.0",
        "eslint-config-byungi": "^0.7.6",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    },
    "eslintConfig": {
        "extends": "byungi/typescript"
    },
    "eslintIgnore": [
        "index.js",
        "index.d.ts"
    ],
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
